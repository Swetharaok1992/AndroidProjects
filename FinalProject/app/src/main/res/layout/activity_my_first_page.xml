<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bridgeport__app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swetharao.finalproject.MyFirstPage"
    android:background="@android:color/holo_purple">

    <ImageView
        app:srcCompat="@drawable/purpleknightslogo2"
        android:id="@+id/ublogo"
        android:layout_height="350dp"
        android:layout_width="350dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/reviews"
        android:id="@+id/reviewsicon"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/drinksicon2"
        android:id="@+id/drinksicon"
        android:layout_above="@+id/ordersIcon"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/reviewsicon"
        android:layout_alignStart="@+id/reviewsicon" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton"
        android:layout_alignBottom="@+id/ublogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp" />

    <ImageView
        app:srcCompat="@drawable/myorders"
        android:id="@+id/ordersIcon"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/infoicon"
        android:layout_alignStart="@+id/infoicon"
        android:layout_width="75dp"
        android:layout_height="75dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/reserve"
        android:id="@+id/reservationicon"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/foodicon"
        android:layout_alignStart="@+id/foodicon" />

    <ImageView
        android:layout_height="75dp"
        app:srcCompat="@drawable/infoicon2"
        android:id="@+id/infoicon"
        android:layout_width="80dp"
        android:layout_alignTop="@+id/drinksicon"
        android:layout_alignRight="@+id/ublogo"
        android:layout_alignEnd="@+id/ublogo" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/menu_icon"
        android:id="@+id/foodicon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignTop="@+id/drinksicon"
        android:layout_alignLeft="@+id/ublogo"
        android:layout_alignStart="@+id/ublogo" />

    <TextView
        android:text=" Purple Knights Restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="NEW USER ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUp"
        android:layout_marginBottom="100dp"
        android:layout_above="@+id/infoicon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/loginButton"
        android:layout_alignStart="@+id/loginButton" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/cartimage"
        android:id="@+id/cart"
        android:layout_alignTop="@+id/signUp"
        android:layout_alignStart="@+id/ublogo" />

</RelativeLayout>
